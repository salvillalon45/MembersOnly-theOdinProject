<%- include('./layout/header') -%>

<div class="container" id="landingContainer">
	<div class="row">
		<div class="col">
			<h1>Creat Message</h1>
			<% if (currentUser.membership_status) {%>
			<form action="/create-message" method="POST">
				<label for="message_title">Message Title</label>
				<input name="message_title" type="text" />

				<label for="message_content">Your Message</label>
				<textarea
					id="message_content"
					name="message_content"
					rows="4"
					cols="50"
					placeholder="EREN YAEGER"
				>
				</textarea>
				<button>Log In</button>
			</form>
			<%} else {%>
			<h2>Become a member to create messages</h2>
			<%}%> <%if (errors) { %>
			<div class="errorsContainer">
				<p>You got errors on the following:</p>
				<ul>
					<% errors.forEach(error => {%>

					<li><%= error.msg %></li>

					<% }) %>
				</ul>
			</div>
			<% }%>
		</div>
	</div>
</div>

<%- include('./layout/footer') -%>
